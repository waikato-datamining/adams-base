adams.flow.control.Flow
	-annotation
	This flows does three things:\n1. It generates an ARFF file from the JPG pictures in the \"data\" directory, which the user manually labels.\nThe labelling consists of selecting pixels on the image and labelling them using the right-click menu for selecting\na classification label for this pixel. A region around these selected pixels is then cropped and turned into a \nweka.core.Instance object (using some feature generators) which gets output in an ARFF file.\n2. A classifiger gets built on the dataset. If there are at least 10 instances in the dataset, then a cross-validation \nis performed as well and the results displayed.\n3. The pixels in the image are classified using the built classifier, overlaying the original image with \"white\" dots\nfor the \"Object\" classification and \"black\" dots for the \"background. To speed things up, only every third pixel \n(x and y) is being classified.
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.source.WekaClassifierSetup
					-classifier
						weka.classifiers.trees.J48
							-C
							0.25
							-M
							2
			-actor
				adams.flow.source.StorageValue
					-name
					model
					-storage-name
					model
			-actor
				adams.flow.control.SubProcess
					-name
					generate features
					-actor
						adams.flow.control.ArrayGenerate
							-annotation
							create an array of FeatureContainer objects
							-branch
								adams.flow.transformer.BufferedImageFeatureGenerator
									-name
									histogram
									-algorithm
										adams.data.jai.features.Histogram
											-converter
												adams.data.featureconverter.FeatureContainer
							-branch
								adams.flow.transformer.BufferedImageFeatureGenerator
									-name
									basic features
									-algorithm
										adams.data.lire.features.BasicFeatures
											-converter
												adams.data.featureconverter.FeatureContainer
							-branch
								adams.flow.transformer.BufferedImageFeatureGenerator
									-name
									tamura + classification
									-algorithm
										adams.data.lire.features.Tamura
											-converter
												adams.data.featureconverter.FeatureContainer
											-field
											@{field_label}
					-actor
						adams.flow.transformer.ConvertFeatures
							-converter
								adams.data.featureconverter.Weka
							-output-type
							ROW
			-actor
				adams.flow.transformer.BufferedImageTransformer
					-name
					perform crop
					-transformer
						adams.data.image.transformer.Cropping
							-algorithm
								adams.data.image.transformer.crop.RelativeCrop
									-x
									@{x}
									-y
									@{y}
									-width
									@{crop}
									-height
									@{crop}
									-anchor
									MIDDLE_CENTER
									-use-anchor-at-pos
									true
	-actor
		adams.flow.standalone.SetVariable
			-name
			margin
			-var-name
			margin
			-var-value
			5
	-actor
		adams.flow.standalone.SetVariable
			-name
			crop rectangle
			-var-name
			crop
			-var-value
			11
	-actor
		adams.flow.standalone.SetVariable
			-name
			num rows
			-var-name
			num_rows
			-var-value
			0
	-actor
		adams.flow.standalone.Stopwatch
			-show-seconds
			true
	-actor
		adams.flow.source.Start
	-actor
		adams.flow.control.Trigger
			-name
			generate training data
			-tee
				adams.flow.source.FileSupplier
					-file
					${EXAMPLE_FLOWS}/data/4825046958_787c97bc96.jpg
			-tee
				adams.flow.control.Tee
					-name
					generate prefix for sub-images
					-tee
						adams.flow.transformer.BaseName
							-remove-extensions
							true
					-tee
						adams.flow.transformer.PrependDir
							-prefix
							${EXAMPLE_FLOWS}/output
					-tee
						adams.flow.transformer.SetVariable
							-name
							prefix for subimages
							-var-name
							prefix_sub
					-tee
						adams.flow.transformer.SetVariable
							-name
							regexp for deleting old subimages
							-var-name
							regexp
							-var-value
							@{prefix_sub}.*.png
							-expand-value
							true
			-tee
				adams.flow.control.Trigger
					-name
					delete old subimages
					-tee
						adams.flow.source.FileSystemSearch
							-search
								adams.flow.source.filesystemsearch.FileSearch
									-directory
									${EXAMPLE_FLOWS}/output
									-regexp
									@{regexp}
					-tee
						adams.flow.control.Breakpoint
							-skip
							true
							-condition
								adams.flow.condition.bool.Expression
					-tee
						adams.flow.transformer.DeleteFile
							-skip
							true
			-tee
				adams.flow.transformer.ImageReader
					-reader
						adams.data.io.input.JAIImageReader
			-tee
				adams.flow.transformer.BufferedImageTransformer
					-transformer
						adams.data.jai.transformer.Resize
							-width
							0.75
							-height
							0.75
			-tee
				adams.flow.transformer.SetStorageValue
					-storage-name
					image
			-tee
				adams.flow.control.Tee
					-name
					image info
					-tee
						adams.flow.control.Branch
							-branch
								adams.flow.control.Sequence
									-name
									height
									-actor
										adams.flow.transformer.ImageInfo
											-type
											HEIGHT
									-actor
										adams.flow.transformer.SetVariable
											-var-name
											height
									-actor
										adams.flow.transformer.MathExpression
											-expression
											X-@{margin}
									-actor
										adams.flow.transformer.Convert
											-conversion
												adams.data.conversion.DoubleToInt
									-actor
										adams.flow.transformer.SetVariable
											-name
											SetVariable-1
											-var-name
											height_class
							-branch
								adams.flow.control.Sequence
									-name
									width
									-actor
										adams.flow.transformer.ImageInfo
									-actor
										adams.flow.transformer.SetVariable
											-var-name
											width
									-actor
										adams.flow.transformer.MathExpression
											-expression
											X-@{margin}
									-actor
										adams.flow.transformer.Convert
											-conversion
												adams.data.conversion.DoubleToInt
									-actor
										adams.flow.transformer.SetVariable
											-name
											SetVariable-1
											-var-name
											width_class
			-tee
				adams.flow.transformer.PixelSelector
					-width
					1200
					-height
					900
					-x
					-2
					-y
					-2
					-action
						adams.flow.transformer.pixelselector.AddClassification
							-label
							Object
							-label
							Background
							-remember-last-selection
							true
					-overlay
						adams.flow.transformer.pixelselector.ClassificationOverlay
							-color
							#ffffff
							-show-index
							true
							-show-label
							true
					-splitter-pos
					900
			-tee
				adams.flow.control.Tee
					-name
					get # pixels
					-tee
						adams.flow.transformer.MatchReportFields
							-output-array
							true
							-regexp
							Classification\\..*
					-tee
						adams.flow.transformer.ArrayLength
					-tee
						adams.flow.transformer.SetVariable
							-var-name
							num_pixels
			-tee
				adams.flow.control.Trigger
					-name
					iterate pixels
					-tee
						adams.flow.source.StorageForLoop
							-upper
							@{num_pixels}
							-variable
							pixel_index
							-storage
							image
					-tee
						adams.flow.control.Tee
							-name
							get x
							-tee
								adams.flow.transformer.SetVariable
									-name
									create field name
									-var-name
									field_x
									-var-value
									Pixel.X.@{pixel_index}[N]
									-expand-value
									true
							-tee
								adams.flow.transformer.GetReportValue
									-field
									@{field_x}
							-tee
								adams.flow.transformer.SetVariable
									-name
									store position
									-var-name
									x
					-tee
						adams.flow.control.Tee
							-name
							get y
							-tee
								adams.flow.transformer.SetVariable
									-name
									create field name
									-var-name
									field_y
									-var-value
									Pixel.Y.@{pixel_index}[N]
									-expand-value
									true
							-tee
								adams.flow.transformer.GetReportValue
									-field
									@{field_y}
							-tee
								adams.flow.transformer.SetVariable
									-name
									store position
									-var-name
									y
					-tee
						adams.flow.control.Tee
							-name
							classification field
							-tee
								adams.flow.transformer.SetVariable
									-name
									create field name
									-var-name
									field_label
									-var-value
									Classification.@{pixel_index}[S]
									-expand-value
									true
							-tee
								adams.flow.transformer.GetReportValue
									-field
									@{field_label}
							-tee
								adams.flow.transformer.SetVariable
									-name
									store label
									-var-name
									pixel_label
					-tee
						adams.flow.transformer.CallableTransformer
							-name
							crop
							-callable
							perform crop
					-tee
						adams.flow.control.Tee
							-name
							save subimage
							-tee
								adams.flow.transformer.SetReportValue
									-name
									set x
									-field
									x[N]
									-value
									@{x}
							-tee
								adams.flow.transformer.SetReportValue
									-name
									set y
									-field
									y[N]
									-value
									@{y}
							-tee
								adams.flow.transformer.SetReportValue
									-name
									set label
									-field
									label[S]
									-value
									@{pixel_label}
							-tee
								adams.flow.control.Tee
									-name
									write image
									-tee
										adams.flow.transformer.SetVariable
											-name
											create filename
											-var-name
											subimage
											-var-value
											@{prefix_sub}.@{pixel_index}.png
											-expand-value
											true
									-tee
										adams.flow.sink.ImageWriter
											-output
											@{subimage}
											-writer
												adams.data.io.output.JAIImageWriter
							-tee
								adams.flow.control.Tee
									-name
									write report
									-tee
										adams.flow.transformer.SetVariable
											-name
											create filename
											-var-name
											subreport
											-var-value
											@{prefix_sub}.@{pixel_index}.report
											-expand-value
											true
									-tee
										adams.flow.transformer.ReportFileWriter
											-writer
												adams.data.io.output.DefaultSimpleReportWriter
											-generator
												adams.core.io.SimpleFixedFilenameGenerator
													-name
													@{subreport}
					-tee
						adams.flow.transformer.CallableTransformer
							-name
							generate features
							-callable
							generate features
					-tee
						adams.flow.transformer.WekaInstanceDumper
							-prefix
							${EXAMPLE_FLOWS}/output/pixelselector2
					-tee
						adams.flow.transformer.SetVariable
							-var-name
							train
					-tee
						adams.flow.control.Count
							-name
							Count rows
							-tee
								adams.flow.transformer.SetVariable
									-var-name
									num_rows
							-condition
								adams.flow.condition.bool.Counting
	-actor
		adams.flow.control.ConditionalTrigger
			-name
			cross-validate
			-tee
				adams.flow.source.Variable
					-var-name
					train
			-tee
				adams.flow.transformer.WekaFileReader
					-loader
						weka.core.converters.ArffLoader
			-tee
				adams.flow.transformer.WekaFilter
					-filter
						weka.filters.unsupervised.attribute.StringToNominal
							-R
							last
			-tee
				adams.flow.transformer.WekaClassSelector
			-tee
				adams.flow.transformer.WekaCrossValidationEvaluator
					-output
						weka.classifiers.evaluation.output.prediction.Null
			-tee
				adams.flow.transformer.WekaEvaluationSummary
			-tee
				adams.flow.sink.Display
					-writer
						adams.data.io.output.NullWriter
			-condition
				adams.flow.condition.bool.Expression
					-expression
					@{num_rows} >= 10
	-actor
		adams.flow.control.Trigger
			-name
			train model
			-tee
				adams.flow.source.Variable
					-var-name
					train
			-tee
				adams.flow.transformer.WekaFileReader
					-loader
						weka.core.converters.ArffLoader
			-tee
				adams.flow.transformer.WekaFilter
					-filter
						weka.filters.unsupervised.attribute.StringToNominal
							-R
							last
			-tee
				adams.flow.transformer.WekaClassSelector
			-tee
				adams.flow.transformer.WekaTrainClassifier
			-tee
				adams.flow.control.Branch
					-branch
						adams.flow.sink.WekaModelWriter
							-output
							${EXAMPLE_FLOWS}/output/pixelselector.model
					-branch
						adams.flow.control.Sequence
							-actor
								adams.flow.control.ContainerValuePicker
									-value
									Model
									-switch-outputs
									true
							-actor
								adams.flow.transformer.SetStorageValue
									-storage-name
									model
	-actor
		adams.flow.control.Trigger
			-name
			classify image
			-tee
				adams.flow.source.ForLoop
					-lower
					@{margin}
					-upper
					@{width_class}
					-step
					3
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					x
			-tee
				adams.flow.control.Trigger
					-name
					loop y
					-tee
						adams.flow.source.ForLoop
							-lower
							@{margin}
							-upper
							@{height_class}
							-step
							3
					-tee
						adams.flow.transformer.SetVariable
							-var-name
							y
					-tee
						adams.flow.control.Trigger
							-name
							classify
							-tee
								adams.flow.source.StorageValue
									-storage-name
									image
							-tee
								adams.flow.transformer.CallableTransformer
									-name
									crop
									-callable
									perform crop
							-tee
								adams.flow.transformer.CallableTransformer
									-name
									generate features
									-callable
									generate features
							-tee
								adams.flow.transformer.WekaFilter
									-name
									WekaFilter-1
									-filter
										weka.filters.unsupervised.attribute.StringToNominal
											-R
											last
							-tee
								adams.flow.transformer.WekaFilter
									-filter
										weka.filters.unsupervised.attribute.AddValues
											-C
											last
											-L
											Object,Background
									-init-once
									true
							-tee
								adams.flow.transformer.WekaClassSelector
							-tee
								adams.flow.transformer.WekaClassifying
									-model-actor
									model
									-on-the-fly
									true
							-tee
								adams.flow.control.ContainerValuePicker
									-switch-outputs
									true
							-tee
								adams.flow.control.Switch
									-name
									Switch (select color)
									-condition
										adams.flow.condition.bool.Expression
											-expression
											X = 0.0
									-condition
										adams.flow.condition.bool.Expression
											-expression
											X = 1.0
									-case
										adams.flow.transformer.SetVariable
											-name
											object
											-var-name
											color
											-var-value
											#ffffff
									-case
										adams.flow.transformer.SetVariable
											-name
											background
											-var-name
											color
											-var-value
											#000000
									-case
										adams.flow.control.Stop
											-stop-msg
											Unknown label!
					-tee
						adams.flow.control.Trigger
							-name
							update image
							-tee
								adams.flow.source.StorageValue
									-storage-name
									image
							-tee
								adams.flow.transformer.Draw
									-operation
										adams.flow.transformer.draw.Pixel
											-color
											@{color}
											-x
											@{x}
											-y
											@{y}
											-type
											COLOR
									-no-copy
									true
	-actor
		adams.flow.control.Trigger
			-name
			show image
			-tee
				adams.flow.source.StorageValue
					-storage-name
					image
			-tee
				adams.flow.sink.ImageViewer
					-writer
						adams.gui.print.NullWriter
					-selection-processor
						adams.gui.visualization.image.selection.NullProcessor
					-image-overlay
						adams.gui.visualization.image.NullOverlay
	-flow-execution-listener
		adams.flow.execution.NullListener

