adams.flow.control.Flow
	-annotation
	Cross-validates a classifier and outputs\nthe evaluation summary.
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.source.WekaClassifierSetup
					-name
					WekaClassifier
					-classifier
						weka.classifiers.trees.J48
							-C
							0.25
							-M
							2
	-actor
		adams.flow.standalone.DeleteFile
			-dir
			${TMP}
			-regexp
			out\\.(pdf|png|csv)
	-actor
		adams.flow.source.FileSupplier
			-file
			${EXAMPLE_FLOWS}/data/anneal.arff
	-actor
		adams.flow.transformer.WekaFileReader
			-loader
				weka.core.converters.ArffLoader
	-actor
		adams.flow.transformer.WekaClassSelector
	-actor
		adams.flow.transformer.WekaCrossValidationEvaluator
			-output
				weka.classifiers.evaluation.output.prediction.Null
			-classifier
			WekaClassifier
	-actor
		adams.flow.control.Branch
			-branch
				adams.flow.control.Sequence
					-name
					CSV
					-actor
						adams.flow.transformer.WekaEvaluationValues
					-actor
						adams.flow.sink.DumpFile
							-output
							${TMP}/out.csv
			-branch
				adams.flow.control.Sequence
					-name
					ROC
					-actor
						adams.flow.sink.WekaThresholdCurve
							-width
							800
							-height
							600
							-writer
								adams.gui.print.PNGWriter
									-file
									${TMP}/out.png
			-branch
				adams.flow.control.Sequence
					-name
					PDF
					-actor
						adams.flow.source.DirectoryLister
							-output-array
							true
							-dir
							${TMP}
							-list-files
							true
							-regexp
							out\\.(csv|png)
					-actor
						adams.flow.transformer.Sort
							-comparator
								adams.core.DefaultCompare
					-actor
						adams.flow.transformer.PDFCreate
							-output
							${TMP}/out.pdf
							-proclet
								adams.core.io.PlainTextPdfProclet
							-proclet
								adams.core.io.CsvPdfProclet
									-reader
										adams.data.io.input.CsvSpreadSheetReader
											-data-row-type
												adams.data.spreadsheet.DenseDataRow
											-spreadsheet-type
												adams.data.spreadsheet.SpreadSheet
							-proclet
								adams.core.io.ImagePdfProclet
									-scale
									0.75
					-actor
						adams.flow.sink.PDFViewer
							-x
							-3
							-writer
								adams.gui.print.NullWriter
			-num-threads
			0
	-flow-execution-listener
		adams.flow.execution.NullListener

