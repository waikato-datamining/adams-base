adams.flow.control.Flow
	-annotation
	Flow to demonstrate how to display polygonsfrom GPS locations \nfrom a spreadsheet on a map.
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.sink.DisplayPanelManager
					-name
					Locations
					-width
					740
					-x
					-3
					-provider
						adams.flow.sink.SpreadSheetDisplay
							-name
							Locations
							-short-title
							true
							-x
							-3
					-entry-name-variable
					name
			-actor
				adams.flow.sink.OpenStreetMapViewer
					-name
					Map
					-short-title
					true
					-writer
						adams.gui.print.NullWriter
					-tile-source
						adams.flow.sink.openstreetmapviewer.OpenStreetMapSource
					-tile-loader
						adams.flow.sink.openstreetmapviewer.OpenStreetMapCachedLoader
					-hit-listener
						adams.flow.sink.openstreetmapviewer.SimpleMapObjectHitListener
					-mapobject-pruner
						adams.flow.sink.openstreetmapviewer.NullPruner
					-map-overlay
						adams.flow.sink.openstreetmapviewer.NullMapOverlay
					-initial-zoom
					1
					-layer-tree
					true
					-layer
					Location
	-actor
		adams.flow.source.FileSupplier
			-file
			${EXAMPLE_FLOWS}/data/polygons.csv
	-actor
		adams.flow.transformer.SpreadSheetFileReader
			-reader
				adams.data.io.input.CsvSpreadSheetReader
					-spreadsheet-type
						adams.data.spreadsheet.SpreadSheet
					-missing
					
	-actor
		adams.flow.control.Tee
			-name
			display original spreadsheet
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					name
					-var-value
					original
			-tee
				adams.flow.sink.CallableSink
					-callable
					Locations
	-actor
		adams.flow.transformer.Convert
			-name
			join lat1 and long1
			-conversion
				adams.data.conversion.SpreadSheetJoinColumns
					-columns
					lat1,long1
					-glue
					 
					-column-name
					gps1
	-actor
		adams.flow.transformer.Convert
			-name
			join lat2 and long2
			-conversion
				adams.data.conversion.SpreadSheetJoinColumns
					-columns
					lat2,long2
					-glue
					 
					-column-name
					gps2
	-actor
		adams.flow.transformer.Convert
			-name
			join lat3 and long3
			-conversion
				adams.data.conversion.SpreadSheetJoinColumns
					-columns
					lat3,long3
					-glue
					 
					-column-name
					gps3
	-actor
		adams.flow.transformer.Convert
			-name
			join lat4 and long4
			-conversion
				adams.data.conversion.SpreadSheetJoinColumns
					-columns
					lat4,long4
					-glue
					 
					-column-name
					gps4
	-actor
		adams.flow.transformer.Convert
			-name
			create 1st GPS object column
			-conversion
				adams.data.conversion.SpreadSheetStringColumnToObject
					-column
					gps1
					-handler
						adams.data.spreadsheet.GPSDecimalDegrees
	-actor
		adams.flow.transformer.Convert
			-name
			create 2nd GPS object column
			-conversion
				adams.data.conversion.SpreadSheetStringColumnToObject
					-column
					gps2
					-handler
						adams.data.spreadsheet.GPSDecimalDegrees
	-actor
		adams.flow.transformer.Convert
			-name
			create 3rd GPS object column
			-conversion
				adams.data.conversion.SpreadSheetStringColumnToObject
					-column
					gps3
					-handler
						adams.data.spreadsheet.GPSDecimalDegrees
	-actor
		adams.flow.transformer.Convert
			-name
			create 4th GPS object column
			-conversion
				adams.data.conversion.SpreadSheetStringColumnToObject
					-column
					gps4
					-handler
						adams.data.spreadsheet.GPSDecimalDegrees
	-actor
		adams.flow.control.Branch
			-branch
				adams.flow.control.Sequence
					-name
					map
					-actor
						adams.flow.transformer.Convert
							-name
							create mapobjects
							-conversion
								adams.data.conversion.SpreadSheetToMapObjects
									-generator
										adams.data.conversion.mapobject.SimplePolygonGenerator
											-layer
											Location
											-coordinates
											gps1,gps2,gps3,gps4
											-name
											name
											-additional-attributes
											meta
					-actor
						adams.flow.sink.CallableSink
							-callable
							Map
			-branch
				adams.flow.control.Sequence
					-name
					spreadsheet
					-actor
						adams.flow.transformer.SetVariable
							-var-name
							name
							-var-value
							GPS objects
					-actor
						adams.flow.sink.CallableSink
							-callable
							Locations
	-flow-execution-listener
		adams.flow.execution.NullListener

