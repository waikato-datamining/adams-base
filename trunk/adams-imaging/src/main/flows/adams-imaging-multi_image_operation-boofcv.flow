adams.flow.control.Flow
	-annotation
	Shows how to use multi-image operations.
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.sink.DisplayPanelManager
					-width
					740
					-height
					550
					-provider
						adams.flow.sink.ImageViewer
							-writer
								adams.gui.print.NullWriter
							-selection-processor
								adams.gui.visualization.image.selection.NullProcessor
							-image-overlay
								adams.gui.visualization.image.NullOverlay
					-entry-name-variable
					entry
	-actor
		adams.flow.source.FileSupplier
			-output-array
			true
			-file
			${EXAMPLE_FLOWS}/data/helloworld.png
			-file
			${EXAMPLE_FLOWS}/data/helloworld_mask.png
	-actor
		adams.flow.control.ArrayProcess
			-actor
				adams.flow.control.Tee
					-name
					get name
					-tee
						adams.flow.transformer.BaseName
							-remove-extensions
							true
					-tee
						adams.flow.transformer.SetVariable
							-var-name
							entry
			-actor
				adams.flow.transformer.ImageReader
					-reader
						adams.data.io.input.BoofCVImageReader
			-actor
				adams.flow.control.Tee
					-tee
						adams.flow.sink.CallableSink
							-callable
							DisplayPanelManager
	-actor
		adams.flow.transformer.BoofCVMultiImageOperation
			-operation
				adams.data.boofcv.multiimageoperation.And
	-actor
		adams.flow.transformer.SetVariable
			-var-name
			entry
			-var-value
			and
	-actor
		adams.flow.sink.CallableSink
			-callable
			DisplayPanelManager
	-flow-execution-listener
		adams.flow.execution.NullListener

