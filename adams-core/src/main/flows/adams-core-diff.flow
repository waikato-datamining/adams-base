adams.flow.control.Flow
	-annotation
	This flow explains how to use the \"diff\" functionality,\ngenerating and displaying the various types of diffs.
	-actor
		adams.flow.source.FileSupplier
			-output-array
			true
			-file
			${EXAMPLE_FLOWS}/data/diff1.txt
			-file
			${EXAMPLE_FLOWS}/data/diff2.txt
	-actor
		adams.flow.control.Tee
			-name
			brief
			-tee
				adams.flow.transformer.Diff
					-type
					BRIEF
			-tee
				adams.flow.sink.Display
					-name
					unified
	-actor
		adams.flow.control.Tee
			-name
			unified
			-tee
				adams.flow.transformer.Diff
			-tee
				adams.flow.sink.Display
					-name
					unified
					-x
					-2
	-actor
		adams.flow.control.Tee
			-name
			side-by-side
			-tee
				adams.flow.transformer.Diff
					-type
					SIDE_BY_SIDE
			-tee
				adams.flow.transformer.Convert
					-conversion
						adams.data.conversion.SideBySideDiffToString
			-tee
				adams.flow.sink.Display
					-name
					side-by-side
					-x
					-3
	-actor
		adams.flow.control.Tee
			-name
			side-by-side viewer
			-tee
				adams.flow.transformer.Diff
					-type
					SIDE_BY_SIDE
			-tee
				adams.flow.sink.SideBySideDiff
					-x
					-3
					-y
					-3
					-writer
						adams.gui.print.NullWriter
	-flow-execution-listener
		adams.flow.execution.NullListener

