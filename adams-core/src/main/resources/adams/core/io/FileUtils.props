# Characters that are considered valid in filenames
FileNameChars=abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_-.,;()#@

# The maximum length for an extension
MaxExtensionLength=6

# The extension suffixes to ignore (comma-separated list; extensions without dot)
IgnoredExtensionSuffixes=\
  7z,\
  bz2,\
  gz
